!!! Strict
%html{ html_attrs("en_EN") }
  %head
    %title Whoisy
    %link{ href: "/css/whoisy.css", rel: "stylesheet" }
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "keywords", content: "whoisy, whois, mobile, app, domain, firefox os, ffoxos, android, boot2gecko, ios, iphone, ipad, web, tablet" }    
    %meta{ name: "author", content: "Francesco 'makevoid' Canessa" }    
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0, user-scalable=no" }
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
    %meta{ name: "apple-mobile-web-app-status-bar-style", content: "black-translucent" }
    -#%meta{ name: "apple-touch-icon", href: "/imgs/icon_touch.png" }
    -#%meta{ name: "apple-touch-icon", sizes: "72x72", href: "/imgs/icon_touch72.png" }
    %script{ src: "/js/vendor/modernizr.js", type: "text/javascript" }
    %script{ src: "/js/vendor/zepto.js", type: "text/javascript" }
  %body{ class: body_class }  
    #container
      .standalone_loader
      :javascript
        $(function(){
          if (window.navigator.standalone)
            $(".standalone_loader").anim({height: "22px"})
            //$(".standalone_gradient").show("fast")
        })
      %header
        %button.refresh â†º
        .inner
          %h1 
            - link_to "Whoisy", "/"
            %span
              The smart mobile whois!
      #content
        = yield
      %footer
    %script{ src: "/js/vendor/underscore.js", type: "text/javascript" }
    %script{ src: "/js/vendor/haml.js", type: "text/javascript" }
    %script{ src: "/js/vendor/backbone.js", type: "text/javascript" }
    %script{ src: "/js/whoisy.js", type: "text/javascript" }
    = yield_content :head
    %script{ type: "text/javascript" }
      $(function(){
      = yield_content :jquery
      });
    = haml :"_backbone_views"