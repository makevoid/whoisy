!!! Strict
%html{ html_attrs("en_EN") }
  %head
    %title Whoisy
    %link{ href: "/css/main.css", rel: "stylesheet" }
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "" }
    %meta{ name: "keywords", content: "" }    
    %meta{ name: "author", content: "" }    
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
    %meta{ name: "apple-mobile-web-app-status-bar-style", content: "black-translucent" }
    %script{ src: "/js/modernizr.js", type: "text/javascript" }
  %body{ class: body_class, onload: "addEventsWebkit()" }  
    #details
      .cont
        -#
          %p Technical Contact:
          %p Name:
          %p Organization:
          %p Country:
          %p State:
          %p City:
          %p Address:
          %p ZIP:
          %p Country code:
          %p Email:
          %p Phone:
          %p Fax:
          %p Created on:
          %p Updated on:
    #container
      %header
        %h1 
          - link_to "Whoisy", "/"
          %span
            - link_to "The smart mobile whois!", "/"
      #content
        = yield
      %footer
    %script{ src: "/js/jquery.js", type: "text/javascript" }
    %script{ src: "/js/moustache.js", type: "text/javascript" }
    %script{ src: "/js/main.js", type: "text/javascript" }
    = yield_content :head
    %script{ type: "text/javascript" }
      $(function(){
      = yield_content :jquery
      });
    %script#result_tmpl{ type: "text/x-moustache-tmpl" }
      :plain
        <ul class='domains'>  
          {{#results}}                                                           
            <li class="avail_{{available}}" data-name="{{name}}">
              <h3>{{name}}</h3>
              <p>{{availableString}}</p>
            </li>   
          {{/results}}                                                           
          {{^results}}<li class='no_results'>No records found</li>{{/results}}           
        </ul>
    %script#whois_tmpl{ type: "text/x-moustache-tmpl" }
      :plain
        <div class='whois_box'>
          ...
          <h5>Technical Contact:</h5>
          <p>Name: {{name}}</p>
          <p>Organization: {{organization}}</p>
          <p>Country: {{country}}</p>
          <p>State: {{state}}</p>
          <p>City: {{city}}</p>
          <p>Address: {{address}}</p>
          <p>ZIP: {{zip}}</p>
          <p>Country code: {{country_code}}</p>
          <p>Email: {{email}}</p>
          <p>Phone: {{phone}}</p>
          <p>Fax: {{fax}}</p>
          <p>Created on: {{created_on}}</p>
          <p>Updated on: {{updated_on}}</p>
          <h5>Administrative Contact:</h5>
          ...
        </div>
    %script#prefs_tmpl{ type: "text/x-moustache-tmpl" }
      :plain
        <div class='whois_box'>
          <p>This frame allows to set up preferences to filter out domains. Mark a specific top level domain name to exclude it from searches.
          </p>    
          <form id='tlds' action='javascript:void(0)' method='get'>
          {{#results}}
            <input type='checkbox' name='{{tld}}' value='{{tld}}'/> {{tld}}
            <br>
          {{/results}}
          </form>
        </div>
        