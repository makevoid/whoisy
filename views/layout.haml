!!! Strict
%html{ html_attrs("en_EN") }
  %head
    %title Whoisy
    %link{ href: "/css/main.css", rel: "stylesheet" }
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "" }
    %meta{ name: "keywords", content: "" }    
    %meta{ name: "author", content: "" }    
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
    %meta{ name: "apple-mobile-web-app-status-bar-style", content: "black-translucent" }
    %script{ src: "/js/modernizr.js", type: "text/javascript" }
  %body{ class: body_class }
    #container
      %header
        %h1 
          - link_to "Whoisy", "/"
          %span
            - link_to "The smart mobile whois!", "/"
      #content
        = yield
      %footer
    %script{ src: "/js/jquery.js", type: "text/javascript" }
    %script{ src: "/js/moustache.js", type: "text/javascript" }
    %script{ src: "/js/main.js", type: "text/javascript" }
    = yield_content :head
    %script{ type: "text/javascript" }
      $(function(){
      = yield_content :jquery
      });
    %script#result_tmpl{ type: "text/x-moustache-tmpl" }
      :plain
        <ul class='domains'>  
          {{#results}}                                                           
            <li class="avail_{{available}}">
              <h3>{{name}}</h3>
              <p>{{availableString}}</p>
            </li>   
          {{/results}}                                                           
          {{^results}}<li class='no_results'>No records found</li>{{/results}}           
        </ul>