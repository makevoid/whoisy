!!! Strict
%html{ html_attrs("en_EN") }
  %head
    %title Whoisy
    %link{ href: "/css/main.css", rel: "stylesheet" }
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "" }
    %meta{ name: "keywords", content: "" }    
    %meta{ name: "author", content: "" }    
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
    %meta{ name: "apple-mobile-web-app-status-bar-style", content: "black-translucent" }
    %script{ src: "/js/vendor/modernizr.js", type: "text/javascript" }
  %body{ class: body_class, onload: "addEventsWebkit()" }  
    #container
      %header
        %h1 
          - link_to "Whoisy", "/"
          %span
            - link_to "The smart mobile whois!", "/"
      #content
        = yield
      %footer
    %script{ src: "/js/vendor/jquery.js", type: "text/javascript" }
    %script{ src: "/js/vendor/moustache.js", type: "text/javascript" }
    %script{ src: "/js/main.js", type: "text/javascript" }
    = yield_content :head
    %script{ type: "text/javascript" }
      $(function(){
      = yield_content :jquery
      });
    = haml :"_backbone_views"