%script#prefs_tmpl{ type: "text/x-moustache-tmpl" }
  :plain
    <div class='whois_box'>
      <p>This frame allows to set up preferences to filter out domains. Mark a specific top level domain name to exclude it from searches.
      </p>    
      <form id='tlds' action='javascript:void(0)' method='get'>
      {{#results}}
        <input type='checkbox' name='{{tld}}' value='{{tld}}'/> {{tld}}
        <br>
      {{/results}}
      <input id="prefs_close" type='submit' value='close'>
      </form>
    </div>
