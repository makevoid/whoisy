%script#result_tmpl_old{ type: "text/x-moustache-tmpl" }
  :plain
    <ul class='domains'>  
      {{#results}}                                                           
        <li class="avail_{{available}}" data-name="{{name}}">
          <h3>{{name}}</h3>
          <p>{{availableString}}</p>
        </li>   
      {{/results}}                                                           
      {{^results}}<li class='no_results'>No records found</li>{{/results}}           
    </ul>
